<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="#E3F2FD"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nombre del área -->
        <TextView
            android:id="@+id/txtNombreArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Área"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <!-- Sección Modo Supervivencia -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_supervivencia">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Supervivencia"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtSupervivenciaResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntaje: 85%"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Espacio -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Sección Mundos por Área -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_mundos"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mundos por Área"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMundosResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel completado: 2/3"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

