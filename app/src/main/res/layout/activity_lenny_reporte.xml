<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".configuracion.Lenny_Reporte">

        <TextView
            android:text="Reporte de Gamificación"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Lectura Crítica"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progresoLectura"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="70"
            android:max="100"
            android:progressTint="#42A5F5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Matematicas"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progresoCuantitativo"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="80"
            android:max="100"
            android:progressTint="#66BB6A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Ciencias Sociales y Ciudadanas"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progresoSociales"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="60"
            android:max="100"
            android:progressTint="#FFA726"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Ciencias Naturales"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progresoCiencias"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="90"
            android:max="100"
            android:progressTint="#AB47BC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Inglés"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progresoIngles"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="75"
            android:max="100"
            android:progressTint="#26C6DA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
