<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <TextView
        android:id="@+id/textHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando..."
        android:textSize="18sp"
        android:layout_gravity="center"/>



    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">



        <!-- Cabecera  -->
        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="208dp"
           android:background="@drawable/bg_view"/>

        <!-- Perfil en la cabecera -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="89dp"
                android:layout_height="92dp"


                android:layout_marginBottom="8dp"
                android:contentDescription="Foto de perfil"
                android:src="@drawable/logoicfes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationY="-30dp"
                android:text="Bienvenido a ICFES UP"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Grid de opciones -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="-80dp"
            android:layout_below="@id/top_view">


            <!-- Fila 0 - Columna 0 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:layout_column="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#99D59B"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ImgGamificacionsemanal"
                        android:layout_width="134dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Retos"
                        android:src="@drawable/pantallaprincipal1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gamificacion Semanal"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fila 0 - Columna 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:layout_column="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#E1F0FD"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/pantalla2"
                        android:contentDescription="Progreso"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi Progreso"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fila 1 - Columna 0 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:layout_column="0">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#E2D68F"
                    android:padding="16dp">


                    <ImageView
                        android:layout_width="132dp"
                        android:id="@+id/imgbryanlapiz"
                        android:layout_height="110dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="false"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:contentDescription="Nutrición"
                        android:src="@drawable/pantalla3" />

                    <TextView
                        android:layout_width="142dp"
                        android:id="@+id/Orientacion_v"

                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_height="wrap_content"
                        android:text="Orientacion Vocacional"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:clickable="true"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fila 1 - Columna 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:layout_column="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#2196F3"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/pantalla4"
                        android:contentDescription="Comunidad"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Modo Supervivencia"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fila 2 - Columna 0 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:layout_row="2"
                android:layout_column="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/red_gami"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="144dp"
                        android:id="@+id/ImgMundosgami"
                        android:layout_height="108dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Configuración"
                        android:src="@drawable/pantalla5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MundosGamificados"
                        android:text="Mundos Gamificados"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"/>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Ir_al_simulacro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@color/mi_color_rojo"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginBottom="16dp"
            android:src="@drawable/alerttt"  />


    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>